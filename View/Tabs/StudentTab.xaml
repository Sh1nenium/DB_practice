<UserControl x:Class="View.Tabs.StudentTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
             Background="White"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:StudentViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0"
                  ItemsSource="{Binding Students}" 

                  SelectedItem="{Binding CurrentStudent, Mode=TwoWay}"
                  DisplayMemberPath="Name"/>
        <StackPanel Grid.Column="1">
            <Image />
            <StackPanel>
                <Label Content="Номер зачетной книжки" />
                <TextBox Text="{Binding CurrentStudent.NubmerOfRecordBook}"
                         Margin="5 0"
                         Width="150" 
                         IsReadOnly="True"
                         HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Имя" />
                <TextBox Text="{Binding CurrentStudent.Name, Mode=TwoWay}"
                         Margin="5 0"
                         Width="150" 
                         HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Фамилия" />
                <TextBox Text="{Binding CurrentStudent.Surname}"
                         Margin="5 0"
                         Width="150" 
                         HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Отчество" />
                <TextBox Text="{Binding CurrentStudent.Patronymic}"
                         Margin="5 0"
                         Width="150" 
                         HorizontalAlignment="Left"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
